<h1>Recipe: <%= @recipe.name %></h1>

<h3><%= @recipe.instructions %></h3>
<h3>Rating: <%= @recipe.rating %> Stars</h3>


<p><%= link_to "Edit Recipe", edit_recipe_path(@recipe) %></p>
<p><%= link_to "Delete Recipe", recipe_path(@recipe),:data => {:confirm => "Are you sure?", :method => "delete"} %></p>

<p><%= link_to "Return to recipe", recipe_path(@recipe) %></p>