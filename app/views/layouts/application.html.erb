<!DOCTYPE html>
<html>
  <head>
    <title>RailsRecipeBox</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="container">
    <div class="row">
      <div class="col flash-alerts">
        <%= flash[:alert] %>
        <%= flash[:notice] %>
      </div>
    </div>
    <div class="row">
      <div class="col">
        <%= yield %>
      </div>
    </div>
  </div>
  </body>
</html>

