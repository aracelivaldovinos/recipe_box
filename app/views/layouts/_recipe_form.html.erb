<%= render "layouts/errors", :object => @recipe %>
<h2>Ingredients:</h2>


<%= form_for [@recipe] do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, class: "form-control" %>

  <%= f.label :instructions %>
  <%= f.text_area :instructions, size: "70x5", class: "form-control" %>
  <%= f.label :rating %>
  <%= f.number_field :rating, in: 1.0..5.0, step: 1, class: "form-control" %>
  <p><%= f.submit class: "mt-3 btn btn-primary" %></p>
<% end %>